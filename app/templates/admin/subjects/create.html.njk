{% extends "layout.html.njk" %}
{% block title %}Pridať predmet{% endblock %}

{% block content %}
    <div class="container mt-4">

        <h2 class="mb-4 text-center">Pridať predmet</h2>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <form method="POST" action="/admin/subjects/create">

                            <div class="mb-3">
                                <label class="form-label">Názov predmetu</label>
                                <input type="text"
                                       name="name_subject"
                                       class="form-control"
                                       placeholder="Matematika"
                                       required>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/admin/subjects" class="btn btn-secondary">
                                    Späť
                                </a>

                                <button type="submit" class="btn btn-success">
                                    Vytvoriť predmet
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
