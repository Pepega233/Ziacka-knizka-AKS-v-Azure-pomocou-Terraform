{% extends "layout.html.njk" %}
{% block title %}Priradenie učiteľa{% endblock %}

{% block content %}
    <h1 class="text-center mb-4"> Priradenie učiteľa</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form method="POST" action="/admin/assign/teacher">

                        <div class="mb-3">
                            <label class="form-label">Učiteľ</label>
                            <select name="id_teacher" class="form-select" required>
                                <option value="">-- vyber učiteľa --</option>
                                {% for t in teachers %}
                                    <option value="{{ t.id_user }}">
                                        {{ t.name }} {{ t.lastname }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trieda</label>
                            <select name="id_class" class="form-select" required>
                                <option value="">-- vyber triedu --</option>
                                {% for c in classes %}
                                    <option value="{{ c.id_class }}">
                                        {{ c.year }}.{{ c.class1 }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Predmet</label>
                            <select name="id_subject" class="form-select" required>
                                <option value="">-- vyber predmet --</option>
                                {% for s in subjects %}
                                    <option value="{{ s.id_subject }}">
                                        {{ s.name_subject }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-success px-4">
                                Uložiť
                            </button>
                            <a href="/admin" class="btn btn-secondary ms-2">
                                Späť
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
